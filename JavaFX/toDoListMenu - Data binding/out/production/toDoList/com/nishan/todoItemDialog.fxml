<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.nishan.DialogController" >
    <headerText>You could set instruction here.</headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short description" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
            <TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>

            <Label text="Details" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
            <TextArea fx:id="detailsArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"></TextArea>

            <Label text="Deadline" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
            <DatePicker fx:id="deadLinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>

        </GridPane>
    </content>
</DialogPane>